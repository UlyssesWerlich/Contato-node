<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>My CRUD in NodeJS</title>
    </head>
    <body>
        <h2>
            Registros
        </h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Telefone</td>
                    <td>E-mail</td>
                    <td>Ação</td>
                </tr>
            </thead>
            <tbody>
            <% data.forEach(function(details) { %>
                <tr>
                    <td><%= details.nome %></td>
                    <td><%= details.telefone %></td>
                    <td><%= details.email %></td>
                    <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
                </tr>    
            <% }) %>
            </tbody>
        </table>   
        <p><a href="/">Novo Contato</a></p>        
    </body>
</html>
